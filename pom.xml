<project>
    <modelVersion>4.0.0</modelVersion>
    <groupId>t2linux</groupId> <artifactId>iso</artifactId> <version>0.2-beta</version>
    <properties>
        <maven.compiler.release>21</maven.compiler.release>
    </properties>
    <build>
        <plugins>

            <!-- Compile -->
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.13.0</version>
                <configuration>
                    <release>25</release>
                </configuration>
            </plugin>

            <!-- Fat JAR -->
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>3.7.1</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <archive>
                                <manifest>
                                    <mainClass>iso.T2ISO</mainClass>
                                </manifest>
                            </archive>
                            <descriptorRefs>
                                <descriptorRef>jar-with-dependencies</descriptorRef>
                            </descriptorRefs>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- jpackage -->
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>3.1.0</version>
                <executions>
                    <execution>
                        <id>jpackage</id>
                        <phase>package</phase>
                        <configuration>
                            <target>
                                <exec executable="jpackage">
                                    <arg value="--type"/>
                                    <arg value="app-image"/>

                                    <arg value="--name"/>
                                    <arg value="T2ISO"/>

                                    <arg value="--input"/>
                                    <arg value="${project.build.directory}"/>

                                    <arg value="--main-jar"/>
                                    <arg value="${project.build.finalName}-jar-with-dependencies.jar"/>

                                    <arg value="--main-class"/>
                                    <arg value="iso.T2ISO"/>

                                    <arg value="--java-options"/>
                                    <arg value="-Djava.awt.headless=false"/>
                                </exec>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>
</project>
